<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LegalistUserApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.LegalistUserApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintTextAlt
        </item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="tab_text_appearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyCoursesTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/tvTextColor1</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabTextAppearance">@style/TextAppearanceTab</item>
        <item name="tabSelectedTextColor">@color/tvTextColor3</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/tvTextColor1</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextAppearance.CalendarWeekDay" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#4D3C3C43</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.CalendarDay" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/calendar_day_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.CalendarHeader" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/tvTextColor1</item>
        <item name="colorControlActivated">@color/starColor</item>
    </style>
</resources>